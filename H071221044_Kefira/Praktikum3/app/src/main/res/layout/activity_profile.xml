<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:layout_margin="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:id="@+id/pimage"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="username"
        android:layout_below="@+id/pimage"
        android:id="@+id/pusername"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:layout_below="@+id/pusername"
        android:textStyle="bold"
        android:id="@+id/followers"
        android:gravity="center"
        android:layout_toLeftOf="@id/pusername"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="500"
        android:layout_below="@+id/followers"
        android:layout_marginStart="20dp"
        android:layout_alignStart="@id/followers"
        android:id="@+id/followers2"
        android:textSize="15sp"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following"
        android:layout_below="@+id/pusername"
        android:layout_toRightOf="@id/pusername"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:id="@+id/following"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="500"
        android:layout_below="@+id/following"
        android:layout_alignStart="@id/following"
        android:layout_marginStart="20dp"
        android:id="@+id/following2"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:text="Postingan"
        android:layout_below="@+id/following2"
        android:id="@+id/tv_postingan"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000"/>

    <ImageView
        android:id="@+id/iv_postingan"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_below="@id/tv_postingan"/>



</RelativeLayout>